<div class="admin-focus user-admin-div">
  <h1>Users</h1>

  <ol class="admin-table">

    <div class="row table-header">
      <div class="col1">Name</div>
      <div class="col2">Email</div>
      <div class="col30">
        <% if params[:order] == 'true' %>
          <%= link_to 'Number of Rants', admin_users_path({order: false}) %>
        <% else %>
          <%= link_to 'Number of Rants', admin_users_path({order: true}) %>
        <% end %>
      </div>
      <div class="col35">Disabled</div>
      <div class="col4">Actions</div>
    </div>

    <% @users.each do |user| %>

      <div class="row">
        <div class="col1"><%= full_name(user) %></div>
        <div class="col2"><%= user.email %></div>
        <div class="col30"><%= user.rants.count %></div>
        <div class="col35">
          <% if user.active %>

          <% else %>
            âœ“
          <% end %>
        </div>
        <div class="col4">

          <% if user.active %>
            <%= link_to 'Disable', admin_user_path(user.id), method: :patch %>
          <% else %>
            <%= link_to 'Enable', admin_user_path(user.id), method: :patch %>
        <% end %>

          <%= link_to 'Impersonate', admin_impersonate_path(user.id) %>

        </div>
      </div>

    <% end %>

  </ol>
</div>