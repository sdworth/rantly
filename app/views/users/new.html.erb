<div class="form-background">

  <h1>Register</h1>
  <%= form_for @user, html: {class: 'user-form'}, url: '/user' do |f| %>
    <div class="padding">
      <div class="register-flex">
        <div class="form-right">
          <%= f.label 'Username' %>
          <p class="error"><%= @user.errors[:username].first %></p>
          <%= f.text_field :username, class: 'textfield', autofocus: true %>

          <%= f.label 'First name' %>
          <p class="error"><%= @user.errors[:first_name].first %></p>
          <%= f.text_field :first_name, class: 'textfield' %>
        </div>
        <div class="form-left">
          <%= f.label 'Password' %>
          <p class="error"><%= @user.errors[:password].first %></p>
          <%= f.password_field :password, class: 'textfield' %>

          <%= f.label 'Last name' %>
          <p class="error"><%= @user.errors[:last_name].first %></p>
          <%= f.text_field :last_name, class: 'textfield' %>
        </div>
      </div>

      <%= f.label :bio %>
      <p class="error"><%= @user.errors[:bio].first %></p>
      <%= f.text_area :bio %>

      <p>How often do you rant? </p>
      <p class="error"><%= @user.errors[:frequency].first %></p>

      <div class="radios">
        <div>
          <%= f.radio_button(:frequency, 'Daily') %>
          <%= f.label(:frequency_daily, 'Daily') %>
        </div>
        <div>
          <%= f.radio_button(:frequency, 'Weekly') %>
          <%= f.label(:frequency_weekly, 'Weekly') %>
        </div>
        <div>
          <%= f.radio_button(:frequency, 'Monthly') %>
          <%= f.label(:frequency_monthly, 'Monthly') %>
        </div>
      </div>

      <%= f.label :avatar, class: 'inline-block' %>
      <%= f.file_field :avatar %>
    </div>
    <div class="button-background">
      <%= f.submit 'REGISTER', class: 'register-button' %>
    </div>
  <% end %>

</div>

<script>
  $('.user-form').find("input:file").each(function (i, elem) {
    var fileInput = $(elem);
    var form         = $(fileInput.parents('form:first'));
    var submitButton = form.find('input[type="submit"]');
    var progressBar  = $("<div class='bar'></div>");
    var barContainer = $("<div class='progress'></div>").append(progressBar);

    fileInput.after(barContainer);

    fileInput.fileupload({
      fileInput:       fileInput,
      url:             '<%= @direct_post.url %>',
      type:            'POST',
      autoUpload:       true,
      formData:         <%= @direct_post.fields.to_json.html_safe %>,
      paramName:        'file', // S3 does not like nested name fields i.e. name="user[avatar_url]"
      dataType:         'XML',  // S3 returns XML if success_action_status is set to 201
      replaceFileInput: false,
      progressall: function (e, data) {
        var progress = parseInt(data.loaded / data.total * 100, 10);
        progressBar.css('width', progress + '%')
      },
      start: function (e) {
        submitButton.prop('disabled', true);

        progressBar.
          css('display', 'block').
          css('width', '0%').
          text("Loading...");
      },
      done: function(e, data) {
        submitButton.prop('disabled', false);
        progressBar.text("Uploading done");

        // extract key and generate URL from response
        var key   = $(data.jqXHR.responseXML).find("Key").text();
        var url   = '//<%= @direct_post.url.host %>/' + key;

        // create hidden field
        var input = $("<input />", { type:'hidden', name: fileInput.attr('name'), value: url });
        form.append(input);
      },
      fail: function(e, data) {
        submitButton.prop('disabled', false);

        progressBar.
          css("background", "red").
          text("Failed");
      }
    });
  });
</script>

